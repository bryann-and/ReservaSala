@model IEnumerable<ReservaSala.Models.Sala>

<div class="pb-2 mt-4 mb-4 border-bottom">
    <a href="@Url.Action("Create", "Salas")" class="btn btn-primary float-right">
        Adicionar Sala
    </a>

    <h3>Salas</h3>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th sc>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Sala item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(itemModel => item.Nome)
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.getElementById('menu-sala').classList.add('active');
</script>